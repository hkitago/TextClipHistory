{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "26.1",

    "icons": {
        "48": "images/icon.svg",
        "512": "images/icon.svg"
    },

    "background": {
        "scripts": [ "background.js" ],
        "type": "module",
        "persistent": false
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "http://*/*", "https://*/*" ],
        "all_frames": true,
        "run_at": "document_start"
    }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [ "contextMenus", "clipboardRead", "clipboardWrite", "storage", "tabs", "activeTab", "nativeMessaging" ],

    "web_accessible_resources": [{
        "resources": ["textcliphistory-ext-inputsource.css", "textcliphistory-ext-latestclip.css"],
        "matches": [ "http://*/*", "https://*/*" ]
    }]
}
